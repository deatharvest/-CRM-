		if (StringUtil.isNotEmpty(xGoodsEntity.getId())) {
			xGoodsEntity = xGoodsService.getEntity(XGoodsEntity.class, xGoodsEntity.getId());
			req.setAttribute("xGoodsPage", xGoodsEntity);
