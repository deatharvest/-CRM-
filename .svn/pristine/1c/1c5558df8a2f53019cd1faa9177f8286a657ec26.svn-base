	/**
	 * 删除x经销商信息
	 * 
	 * @return
	 */
	@RequestMapping(params = "doDel")
	@ResponseBody
	public AjaxJson doDel(TBCustomerEntity tBCustomer, HttpServletRequest request) {
		AjaxJson j = new AjaxJson();
		tBCustomer = systemService.getEntity(TBCustomerEntity.class, tBCustomer.getId());
		message = "x经销商信息删除成功";
		try{
			tBCustomerService.delete(tBCustomer);
			systemService.addLog(message, Globals.Log_Type_DEL, Globals.Log_Leavel_INFO);
		}catch(Exception e){
			e.printStackTrace();
			message = "x经销商信息删除失败";
			throw new BusinessException(e.getMessage());
		}
		j.setMsg(message);
		return j;
	}
	
	/**
	 * 批量删除x经销商信息
	 * 
	 * @return
	 */
	 @RequestMapping(params = "doBatchDel")
	@ResponseBody
	public AjaxJson doBatchDel(String ids,HttpServletRequest request){
		AjaxJson j = new AjaxJson();
		message = "x经销商信息删除成功";
		try{
			for(String id:ids.split(",")){
				TBCustomerEntity tBCustomer = systemService.getEntity(TBCustomerEntity.class, 
				id
				);
				tBCustomerService.delete(tBCustomer);
				systemService.addLog(message, Globals.Log_Type_DEL, Globals.Log_Leavel_INFO);
			}
		}catch(Exception e){
			e.printStackTrace();
			message = "x经销商信息删除失败";
			throw new BusinessException(e.getMessage());
		}
		j.setMsg(message);
		return j;
	}


	/**
	 * 添加x经销商信息
	 * 
	 * @param ids
	 * @return
	 */
	@RequestMapping(params = "doAdd")
	@ResponseBody
	public AjaxJson doAdd(TBCustomerEntity tBCustomer, HttpServletRequest request) {
		AjaxJson j = new AjaxJson();
		message = "x经销商信息添加成功";
		try{
			tBCustomerService.save(tBCustomer);
			systemService.addLog(message, Globals.Log_Type_INSERT, Globals.Log_Leavel_INFO);
		}catch(Exception e){
			e.printStackTrace();
			message = "x经销商信息添加失败";
			throw new BusinessException(e.getMessage());
		}
		j.setMsg(message);
		return j;
	}
	
	/**
	 * 更新x经销商信息
	 * 
	 * @param ids
	 * @return
	 */
	@RequestMapping(params = "doUpdate")
	@ResponseBody
	public AjaxJson doUpdate(TBCustomerEntity tBCustomer, HttpServletRequest request) {
		AjaxJson j = new AjaxJson();
		message = "x经销商信息更新成功";
		TBCustomerEntity t = tBCustomerService.get(TBCustomerEntity.class, tBCustomer.getId());
		try {
			MyBeanUtils.copyBeanNotNull2Bean(tBCustomer, t);
			tBCustomerService.saveOrUpdate(t);
			systemService.addLog(message, Globals.Log_Type_UPDATE, Globals.Log_Leavel_INFO);
		} catch (Exception e) {
			e.printStackTrace();
			message = "x经销商信息更新失败";
			throw new BusinessException(e.getMessage());
		}
		j.setMsg(message);
		return j;
	}
	

	/**
	 * x经销商信息新增页面跳转
	 * 
	 * @return
	 */
	@RequestMapping(params = "goAdd")
	public ModelAndView goAdd(TBCustomerEntity tBCustomer, HttpServletRequest req) {
		if (StringUtil.isNotEmpty(tBCustomer.getId())) {
			tBCustomer = tBCustomerService.getEntity(TBCustomerEntity.class, tBCustomer.getId());
			req.setAttribute("tBCustomerPage", tBCustomer);
		}
		return new ModelAndView("business/customer/tBCustomer-add");
	}
	/**
	 * x经销商信息编辑页面跳转
