	@RequestMapping(params = "goUpdate")
	public ModelAndView goUpdate(TBCustomerEntity tBCustomer, HttpServletRequest req) {
		if (StringUtil.isNotEmpty(tBCustomer.getId())) {
			tBCustomer = tBCustomerService.getEntity(TBCustomerEntity.class, tBCustomer.getId());
			req.setAttribute("tBCustomerPage", tBCustomer);
		}
		return new ModelAndView("business/customer/tBCustomer-update");
	}
